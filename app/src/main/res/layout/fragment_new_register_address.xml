<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/addressCountryEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_country"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/addressStateEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addressStateEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_state"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/addressCountryEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addressCityEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_city"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/addressCountryEditText"
        app:layout_constraintStart_toStartOf="@+id/addressCountryEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressCountryEditText" />

    <EditText
        android:id="@+id/addressNeighbourhoodEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_neighbourhood"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/addressStateEditText"
        app:layout_constraintStart_toStartOf="@+id/addressStateEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressStateEditText" />

    <EditText
        android:id="@+id/addressAddressEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_address"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/addressAddressNumberEditText"
        app:layout_constraintStart_toStartOf="@+id/addressCityEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressCityEditText" />

    <EditText
        android:id="@+id/addressAddressNumberEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_address_number"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/addressCityEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressCityEditText" />

    <EditText
        android:id="@+id/addressPostalCodeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_postal_code"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/addressNeighbourhoodEditText"
        app:layout_constraintStart_toStartOf="@+id/addressNeighbourhoodEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressCityEditText" />

    <EditText
        android:id="@+id/addressComplementEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edit_text_background"
        android:hint="@string/new_register_address_complement"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="80dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/addressAddressNumberEditText"
        app:layout_constraintStart_toStartOf="@+id/addressAddressEditText"
        app:layout_constraintTop_toBottomOf="@+id/addressAddressEditText" />

    <TextView
        android:id="@+id/newRegisterAddressConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/new_register_address_continue"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/newRegisterAddressBackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/new_register_address_back"
        android:textColor="@color/grey"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>